<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/sign_up_1_back"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <EditText
        android:id="@+id/reset_username"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="Input your username"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="157dp"
        android:ems="10"
        android:inputType="textPersonName"
         />

    <EditText
        android:id="@+id/reset_password"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reset_username"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Input your email"
        android:inputType="textEmailAddress" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:id="@+id/reset_group"
        android:layout_below="@+id/reset_password"
        android:layout_alignStart="@+id/reset_password">


        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/by_email"
            android:textSize="18dp"
            android:layout_marginBottom="5dp"
            android:textColor="@android:color/black"
            android:text="Reset using your email"
            />


        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textColor="@android:color/black"
            android:id="@+id/by_security"
            android:text="Answer security question"
            />



    </RadioGroup>


    <Button
        android:id="@+id/next_button_restore"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:background="@drawable/next_button"
        android:layout_marginTop="81dp"
        android:layout_below="@+id/reset_group"
        android:layout_centerHorizontal="true" />
</RelativeLayout>