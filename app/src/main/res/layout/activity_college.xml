<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/college_back"
    >

    <!-- search button-->
    <Button
        android:id="@+id/search"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:layout_margin="5dp"

        android:layout_marginEnd="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <!-- education button-->
    <Button
        android:id="@+id/education"
        android:layout_width="180dp"
        android:layout_height="35dp"
        android:layout_marginStart="35dp"
        android:background="@drawable/education"
        android:layout_marginTop="198dp"
        android:layout_below="@+id/search"
        android:layout_alignParentStart="true" />

    <!-- Science button-->
    <Button
        android:id="@+id/science"
        android:layout_width="188dp"
        android:layout_height="35dp"
        android:background="@drawable/science"
        android:layout_alignStart="@+id/education"
        android:layout_below="@+id/education"
        android:layout_marginTop="22dp"
         />

    <!-- culture and language and art button-->
    <Button
        android:id="@+id/cul_lan_art"
        android:layout_width="188dp"
        android:layout_height="35dp"
        android:background="@drawable/culture_language"
        android:layout_alignStart="@+id/science"
        android:layout_below="@+id/science"
        android:layout_marginTop="21dp"
         />

    <!-- economics and humanities-->
    <Button
        android:id="@+id/eco_hum"
        android:layout_width="188dp"
        android:layout_height="35dp"
        android:background="@drawable/eco_humanity"
        android:layout_alignStart="@+id/cul_lan_art"
        android:layout_below="@+id/cul_lan_art"
        android:layout_marginTop="19dp"
         />

    <!-- your college logo-->

    <Button
        android:id="@+id/your_logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/college"
        android:layout_above="@+id/eco_hum"
        android:layout_toStartOf="@+id/search"
        android:layout_marginBottom="18dp" />








</RelativeLayout>
